{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "jsx": "react-native",
    "baseUrl": "./",
    "paths": {
      "@/*": ["./*"],
      "~/*": ["../*"]
    },
    "esModuleInterop": true
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "components/__tests__/StyledText-test.js",
    "./../src/server/router/index.ts",
    "../util/env.ts",
    "../lib",
    "../env.d.ts"
  ]
}
