{
  "name": "order-taking-system",
  "version": "1.2.6",
  "private": true,
  "scripts": {
    "setup": "rimraf node_modules && bun install && cp .env.example .env && bun run db:up && bun run db:migrate && bun run db:seed && npx simple-git-hooks",
    "dev": "next dev",
    "build": "prisma migrate deploy && prisma generate && next build",
    "start": "next start",
    "biome:check": "biome check .",
    "biome:apply": "biome check . --apply-unsafe",
    "format": "biome format .",
    "typecheck": "tsc",
    "db:up": "docker compose up -d",
    "db:down": "docker compose down",
    "db:migrate": "prisma migrate dev",
    "db:deploy": "prisma migrate deploy",
    "db:studio": "prisma studio",
    "db:seed": "bun run ./prisma/seed.ts",
    "db:reset": "prisma migrate reset",
    "test:unit": "bun test --watch",
    "dev-deploy": "vercel",
    "prod-deploy": "vercel --prod"
  },
  "dependencies": {
    "@hookform/resolvers": "^3.3.4",
    "@mantine/carousel": "7.10.0",
    "@mantine/core": "7.10.0",
    "@mantine/dates": "7.10.0",
    "@mantine/dropzone": "7.10.0",
    "@mantine/form": "7.10.0",
    "@mantine/hooks": "7.10.0",
    "@mantine/modals": "7.10.0",
    "@prisma/client": "5.11.0",
    "@react-native-async-storage/async-storage": "^1.24.0",
    "@supabase/auth-helpers-nextjs": "^0.9.0",
    "@supabase/ssr": "^0.1.0",
    "@supabase/supabase-js": "^2.39.8",
    "@tabler/icons-react": "^3.2.0",
    "@tanstack/react-query": "^4.18.0",
    "@trpc/client": "^10.45.2",
    "@trpc/next": "^10.45.2",
    "@trpc/react-query": "^10.45.2",
    "@trpc/server": "^10.45.2",
    "@types/encoding-japanese": "^2.0.5",
    "@types/pdfkit": "^0.13.4",
    "@types/svg-to-pdfkit": "^0.1.3",
    "@types/uuid": "^10.0.0",
    "dayjs": "^1.11.10",
    "embla-carousel-react": "^8.0.4",
    "encoding-japanese": "^2.2.0",
    "expo-server-sdk": "^3.10.0",
    "fs": "^0.0.1-security",
    "html2canvas": "^1.4.1",
    "jsonwebtoken": "^9.0.2",
    "jspdf": "^2.5.1",
    "next": "^14",
    "nextjs-routes": "^2.1.0",
    "node-fetch": "^3.3.2",
    "path": "^0.12.7",
    "pdf-lib": "^1.17.1",
    "pdfkit": "^0.15.0",
    "react": "^18",
    "react-dom": "^18",
    "react-hook-form": "^7.51.1",
    "react-icons": "^5.0.1",
    "satori": "^0.10.13",
    "superjson": "^2.2.1",
    "svg-to-pdfkit": "^0.1.8",
    "trpc-panel": "^1.3.4",
    "uuid": "^10.0.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@biomejs/biome": "1.7.1",
    "@types/bun": "latest",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/nodemailer": "^6.4.15",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.5",
    "nodemailer": "^6.9.13",
    "postcss": "^8.4.38",
    "postcss-preset-mantine": "^1.13.0",
    "postcss-simple-vars": "^7.0.1",
    "prisma": "^5.11.0",
    "rimraf": "^5.0.5",
    "simple-git-hooks": "^2.11.0",
    "typescript": "latest",
    "vercel": "latest"
  },
  "simple-git-hooks": {
    "pre-commit": "bun run biome:apply",
    "pre-push": "bun run typecheck && bun run build && cd native && bun run typecheck"
  }
}
